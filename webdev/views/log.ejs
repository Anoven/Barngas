<!DOCTYPE html>
<html>
<head>
	<title></title>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
	
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="./assets/css/all.css">
	<link rel="stylesheet" type="text/css" href="./assets/css/nav.css">
	<link rel="stylesheet" type="text/css" href="./assets/css/log.css">
</head>
<body>
	<% include ./partials/nav %>

	<div class="container-fluid padded">
		<div class="row">
			<div class="col-sm-12">
				<button class = 'btn btn-info new-btn' data-toggle="modal" data-target= '#newLog'>
					New Log Entry
				</button>		
			</div>
			
		</div>
		
		<div class="modal fade" id = newLog role="dialog" aria-labelledby='newLogTitle' aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id='newLogTitle'>New Log Entry</h5>

						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>

					<div class="modal-body">
						<div class="row">
							<div class="col-sm-6">
								<div class="input-group-prepend">
									<label class="input-group-text" for="dateInput">Date: </label>
									<input type="date" class = 'date-input' id = 'dateInput'/> 
								</div>	
							</div>
							
							<div class="col-sm-6">
								<div class="input-group-prepend" style="float: right;">
									<label class="input-group-text" for="timeInput">Time: </label>
									<input type="time" class = 'time-input' id = 'timeInput'/>
								</div>
							</div>
						</div>

						<div class="row" style="margin-top: 15px;">
							<div class="col-sm-12">
								<div class="input-group-prepend">
									<label class="input-group-text" for="dateInput">Group: </label>
									<select class="group-input" id = 'group_select'></select> 
								</div>	
							</div>
						</div>

						<div class="row" style="margin-top: 15px;">
							<div class="col-sm-12">
								<input type="text" class = 'text-input' name="">
							</div>
						</div>
					</div>

					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary">Save</button>
					</div>
				</div>
			</div>
		</div>

		<div id = 'root'></div>
	</div>


	<script type="text/javascript" src="./assets/js/jquery-3.3.1.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="./assets/js/logbundle.js"></script>
</body>
</html>